@model CESAPSCOREWEBAPP.Models.CaseBPC

@{
        ViewData["Title"] = "Create Case BPC";
        ViewData["Tab"] = "<ol class='breadcrumb'>"
                 + "<li>"
                 + "<a href='../../Home/Index' data-toggle='tooltip' data-placement='top' title='Home'>หน้าหลัก</a>"
                 + "</li>"
                 + "<li>"
                 + "<a href='/CaseBPCs/Index' data-toggle='tooltip' data-placement='top' title='List'>Case BPC</a>"
                 + "</li>"
                 + "<li class='active'>"
                 + "<b><a data-toggle='tooltip' data-placement='top' title='Add Case BPC'>" + @ViewData["Title"] + "</a></b>"
                 + "</li>"
                 + "</ol>";
}

<div class="col-sm-6 col-lg-6 col-md-6 col-lg-offset-3">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>@ViewData["Title"]</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">


                            <label class="control-label">วันที่เปิด Case</label>

                            <div class="input-group date" id="dtp1">
                                <input type="text" class="form-control" name="CaseBPCDate" id="txtStart" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label">Case MA</label>
                            <input asp-for="CaseMA" class="form-control" />
                            <span asp-validation-for="CaseMA" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">ชื่อเรื่อง</label>
                            <input asp-for="CaseBPCSubject" class="form-control" />
                            <span asp-validation-for="CaseBPCSubject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">รายละเอียด</label>
                            <textarea asp-for="CaseBPCDetail" class="form-control"></textarea>
                            <span asp-validation-for="CaseBPCDetail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">สถานะ</label>
                            <select asp-for="caseBPCStatus" class="form-control" asp-items="Html.GetEnumSelectList<CaseBPC.CaseBPCStatus>()"></select>
                            <span asp-validation-for="caseBPCStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">ระดับความสำคัญ</label>
                            <select asp-for="caseBPCPLevel" class="form-control" asp-items="Html.GetEnumSelectList<CaseBPC.CaseBPCPLevel>()"></select>
                            <span asp-validation-for="caseBPCPLevel" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">วันที่แก้ไข</label>

                            <div class="input-group date" id="dtp3">
                                <input type="text" class="form-control" name="CaseBPCPDateFix" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label">แก้ไขโดย</label>
                            <input asp-for="EditBy" class="form-control" />
                            <span asp-validation-for="EditBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">เปิดเคสโดย</label>
                            <input asp-for="openCaseBy" class="form-control" />
                            <span asp-validation-for="openCaseBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>

    </div>

</div>




@section Scripts {
  

    <script>
        $('#dtp1,#dtp3,#dtp4').datetimepicker({
            format: 'DD/MM/YYYY HH:mm:ss',
        });
    </script>

}
