@model IEnumerable<CESAPSCOREWEBAPP.Models.Blog>

@{
    ViewData["Title"] = "รายการข่าวสาร";
}

<div class="col-xs-12 col-sm-12  col-md-12 col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>ข้อมูลข่าวสาร</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <p>
                <a asp-action="Create" class="btn btn-info">Create New</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" id="dt1">
                    <thead>
                        <tr>
                            <th>
                                วันที่
                            </th>
                            <th>
                                หัวข้อข่าวส่าร
                            </th>
                            <th>Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>

                                    @{
                                        DateTime numbers = item.BlogDate;
                                        DateTime UpdatedTime = (DateTime)numbers;

                                        String date1 = UpdatedTime.ToString("dd/MM/yyyy");

                                        @date1

                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BlogTitle)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.BlogId" class="btn-white btn btn-xs">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.BlogId" class="btn-white btn btn-xs">Detail</a>
                                    <a asp-action="Delete" asp-route-id="@item.BlogId" class="btn-white btn btn-xs">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

