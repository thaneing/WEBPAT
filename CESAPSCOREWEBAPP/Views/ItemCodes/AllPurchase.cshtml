                //    loadingIndicator: true
                //},
                responsive: true,
                //fixedHeader: true,
                select: {
                    style: 'os',
                    blurable: true
                },
                dom: 'Bfrtip',
                //stateSave: true,
                buttons: [

                    {
                        extend: 'colvis',
                        text: '<i class="fa fa-eye"></i> ซ่อน/แสดง',
                        //messageTop: item + " " + itemName,
                        titleAttr: 'Hide',
                        postfixButtons: ['colvisRestore']
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                          columns: ':visible'
