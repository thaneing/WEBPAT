@model IEnumerable<CESAPSCOREWEBAPP.Models.HRRecruite>

@{
    ViewData["Title"] = "Recruit Data";
    ViewData["Tab"] = "<ol class='breadcrumb'>"
                   + "<li>"
                   + "<a href='../../Home/Index'>Home</a>"
                   + "</li>"
                   + "<li class='active'>"
                   + "<a href='/HRRecruites/Index'>" + @ViewData["Title"] + "</a>"
                   + "</li>"
                   + "</ol>";


}

<section class="col-lg-12"></section>


<section class="col-lg-12">
    <button onclick="location.href='@Url.Action("PositionPower", "HRrecruites")'" class="btn btn-primary dim btn-large-dim"><i class="fa fa-sitemap"></i></button>


    <button onclick="location.href='@Url.Action("Calendar", "HRrecruites")'" class="btn btn-primary dim btn-large-dim"><i class="fa fa-calendar"></i></button>
    <button onclick="location.href='@Url.Action("Report", "HRrecruites")'" class="btn btn-primary dim btn-large-dim"><i class="fa fa-bar-chart"></i></button>
</section>

<div class="col-xs-12 col-sm-12  col-md-12 col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">

            <h5>@ViewData["Title"]</h5>

            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>

            </div>
        </div>
        <div class="ibox-content">


            <p>
                <a asp-action="Create" class="btn btn-info">Create New</a>
            </p>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover dataTables-example" id="dt1">
                    <thead>
                        <tr>

                            <th>
                                วันที่
                            </th>

                            <th>
                                ชื่อ-สกุล
                            </th>
                            <th>
                                ชื่อเล่น
                            </th>
                            <th>
                                อายุ
                            </th>
                            <th>
                                เบอร์โทร
                            </th>
                            <th>
                                Email
                            </th>

                            <th>
                                สมัคร
                            </th>
                            <th>
                                สถานะ
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var f = 1;
                        }

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @*@Html.DisplayFor(modelItem => item.HRRecruitDate)*@
                                    @{
                                        DateTime HRRecuitDate = item.HRRecruitDate;
                                        @HRRecuitDate.ToString("yyyy/MM/dd");
                                    }

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TitleOfUsers.TitleOfUserName)@Html.DisplayFor(modelItem => item.HRRecruiteFName)  @Html.DisplayFor(modelItem => item.HRRecruiteLName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HRRecruiteNickname)
                                </td>
                                <td>

                                    @{
                                        DateTime numbers = item.HRRecruitBirth;
                                        var a = "";
                                        try
                                        {
                                            DateTime UpdatedTime = (DateTime)numbers;
                                            DateTime Now = DateTime.Now;
                                            int Years = new DateTime(DateTime.Now.Subtract(UpdatedTime).Ticks).Year - 1;
                                            DateTime PastYearDate = UpdatedTime.AddYears(Years);
                                            int Months = 0;
                                            for (int i = 1; i <= 12; i++)
                                            {
                                                if (PastYearDate.AddMonths(i) == Now)
                                                {
                                                    Months = i;
                                                    break;
                                                }
                                                else if (PastYearDate.AddMonths(i) >= Now)
                                                {
                                                    Months = i - 1;
                                                    break;
                                                }
                                            }
                                            int Days = Now.Subtract(PastYearDate.AddMonths(Months)).Days;
                                            int Hours = Now.Subtract(PastYearDate).Hours;
                                            int Minutes = Now.Subtract(PastYearDate).Minutes;
                                            int Seconds = Now.Subtract(PastYearDate).Seconds;
                                            a = String.Format("{0} ปี",
                                            Years);
                                        }
                                        catch (Exception e)
                                        {

                                            a = "ไม่ทราบอายุ";
                                        }

                                        @a;
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HRRecruiteTel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HRRecruiteEmail)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Organizs.Positions.PositionName) แผนก : @Html.DisplayFor(modelItem => item.Organizs.Department1s.Department1Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HRRecruiteStatuses.HRRecruiteStatusName)
                                </td>

                                <td>
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal-@Html.DisplayFor(modelItem => item.HRRecruiteID)"><i class="fa fa-eye"></i></button>
                                    <a asp-action="Edit" asp-route-id="@item.HRRecruiteID" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.HRRecruiteID" class="btn btn-default"><i class="fa fa-clock-o"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.HRRecruiteID" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                            <!-- Modal -->
                            <div id="myModal-@Html.DisplayFor(modelItem => item.HRRecruiteID)" class="modal fade" role="dialog">
                                <div class="modal-dialog">
                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">รายละเอียด</h4>
                                        </div>
                                        <div class="modal-body">
                                            <dl class="dl-horizontal">

                                                <dt>
                                                    วันที่ Recruit
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruitDate)
                                                </dd>
                                                <dt>
                                                    บัตรประจำตัวประชาชน
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteCardId)
                                                </dd>
                                                <dt>
                                                    ชื่อ - สกุล
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.TitleOfUsers.TitleOfUserName)@Html.DisplayFor(modelItem => item.HRRecruiteFName)   @Html.DisplayFor(modelItem => item.HRRecruiteLName)
                                                </dd>
                                                <dt>
                                                    ชื่อเล่น
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteNickname)
                                                </dd>
                                                <dt>
                                                    วัน/เดือน/ปี เกิด
                                                </dt>
                                                <dd>
                                                    @{
                                                        DateTime numbers2 = item.HRRecruitBirth;
                                                        @numbers2.ToString("dd/MM/yyyy")
                                                    }
                                                </dd>
                                                <dt>
                                                    อายุ
                                                </dt>
                                                <dd>
                                                    @{
                                                        DateTime numbers1 = item.HRRecruitBirth;
                                                        var a1 = "";
                                                        try
                                                        {
                                                            DateTime UpdatedTime = (DateTime)numbers1;
                                                            DateTime Now = DateTime.Now;
                                                            int Years = new DateTime(DateTime.Now.Subtract(UpdatedTime).Ticks).Year - 1;
                                                            DateTime PastYearDate = UpdatedTime.AddYears(Years);
                                                            int Months = 0;
                                                            for (int i = 1; i <= 12; i++)
                                                            {
                                                                if (PastYearDate.AddMonths(i) == Now)
                                                                {
                                                                    Months = i;
                                                                    break;
                                                                }
                                                                else if (PastYearDate.AddMonths(i) >= Now)
                                                                {
                                                                    Months = i - 1;
                                                                    break;
                                                                }
                                                            }
                                                            int Days = Now.Subtract(PastYearDate.AddMonths(Months)).Days;
                                                            int Hours = Now.Subtract(PastYearDate).Hours;
                                                            int Minutes = Now.Subtract(PastYearDate).Minutes;
                                                            int Seconds = Now.Subtract(PastYearDate).Seconds;
                                                            a1 = String.Format("{0} ปี",
                                                            Years);
                                                        }
                                                        catch (Exception e)
                                                        {

                                                            a = "ไม่ทราบอายุ";
                                                        }

                                                        @a;
                                                    }
                                                </dd>
                                                <dt>
                                                    เบอร์โทร
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteTel)
                                                </dd>
                                                <dt>
                                                    Email
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteEmail)
                                                </dd>
                                                <dt>
                                                    Line Id
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteLineId)
                                                </dd>
                                                <dt>
                                                    สถานะการ Recruite
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteGroups.HRRecruiteGroupDetail)
                                                </dd>

                                                <dt>
                                                    เริ่มทำงาน
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.StartWork)
                                                </dd>
                                                <dt>
                                                    กรุ๊ปเลือด
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.Bloods.BloodName)
                                                </dd>
                                                <dt>
                                                    สถานะการ Recruite
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.HRRecruiteStatuses.HRRecruiteStatusName)
                                                </dd>
                                                <dt>
                                                    สถานศึกษา
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.Universities.UniversiryName)
                                                </dd>

                                                <dt>
                                                    คณะ
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.Faculties.FacultyName)
                                                </dd>
                                                <dt>
                                                    สาขา
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.Majors.MajorName)
                                                </dd>
                                                <dt>
                                                    เกรดเฉลี่ย
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.GPA)
                                                </dd>
                                                <dt>
                                                    ปีที่สำเร็จการศึกษา
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.YearCongrate)
                                                </dd>
                                                <dt>
                                                    ระดับการศึกษาสูงสุด
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.TypeCongrates.TypeCongrateName)
                                                </dd>

                                                <dt>
                                                    สถานที่ทำงานล่าสุด
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.LastWorkYear)
                                                </dd>
                                                <dt>
                                                    ประสบการณ์ทำงาน
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.ExWorkYear)
                                                </dd>
                                                <dt>
                                                    ตำแหน่งสุดท้าย
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.LastPosition)
                                                </dd>
                                                <dt>
                                                    ช่วงเงินเดือนสุดท้าย
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.TypeOfSalaries.TypeOfSalaryName)
                                                </dd>
                                                <dt>
                                                    สาเหตุที่ออกจากงาน
                                                </dt>
                                                <dd>
                                                    @Html.DisplayFor(modelItem => item.TypeOfResigns.TypeOfResignName)
                                                </dd>

                                            </dl>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




