                            var data = dt.buttons.exportData();
                            $.fn.dataTable.fileSave(
                                new Blob([JSON.stringify(data)]),
                                'Export.json'
                            );
                        }
                    },
                    {
                        extend: 'selectAll'
                    },
                    {
                        extend: 'selectNone'
                    }
                ],
                "ajax": {
                    "url": "/HRRecruites/GetTableResuiteData/?StartDate=" + date1 + "&EndDate=" + date2,
                    "contentType": dataType,
                    "type": "GET",
                    "data": function (response) {
                        return JSON.stringify(response.data);
                    }

                },

                "columns": [


                    { "data": "RowNumber" },
                    { "data": "DepartmentName" },
                    { "data": "Department1Name" },
                    { "data": "PositionName" },
                    { "data": "RecuireNow" },
                    { "data": "Apptotal" },
                    { "data": "AppTel" },
                    { "data": "PerAppTel" },
                    { "data": "AppEtc2" },
                    { "data": "AppEtc3" },
                    { "data": "AppEtc4" },
                    { "data": "AppEtc5" }

                    //{ "data": "InitialEntryGlobalDim2" },
                    // { "data": "CountDocument" },




                ]

            });



            $.ajax({
                type: "GET",
                url: "/HRRecruites/GetAddWeek/?date1=" + date1 + "&date2=" + date2,
                success: function (data1) {
                    label2 = [];
                    data2 = [];
                    $.each(data1, function (i, v1) {
                        label2.push(v1.X);
                        data2.push(v1.Y);
                    })

                    var progress = document.getElementById('animationProgress1');
                    var ctx = document.getElementById("canvas1").getContext("2d");

                    var myChart1 = new Chart(ctx, {});
                    myChart1.destroy();

                    myChart1 = new Chart(ctx, {
                        type: "bar",
                        data: {
                            labels: label2,
                            datasets: [
                                {
                                    label: "จำนวนที่นัด",
                                    fillColor: "rgba(151,187,205,0.5)",
                                    strokeColor: "rgba(151,187,205,0.8)",
                                    highlightFill: "rgba(151,187,205,0.75)",
                                    highlightStroke: "rgba(151,187,205,1)",
                                    data: data2
                                }
                            ]
                        },
                        options: {

                            title: {
                                display: true,
                                text: 'จำนวนการนัด'
                            },
                            legend: {
                                legendPosition: 'right',
                                display: true,
                                labels: {
                                    fontColor: 'rgb(255, 99, 132)'
                                }
                            },
                            scales: {
                                yAxes: [
                                    {
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }
                                ]
                            },
                            animation: {
                                duration: 2000,
                                onProgress: function (animation) {
                                    progress.value = animation.currentStep / animation.numSteps;
                                },
                                onComplete: function () {
                                    window.setTimeout(function () {
                                        progress.value = 0;
                                    }, 2000);
                                }
                            }
                        }
                    });
                }
            })





        }
    </script>

