<style>

    progress {
        text-align: center;
    }

        progress:after {
            content: attr(value)'%';
        }

    th {
        font-size: 12px;
    }

    td {
        font-size: 12px;
    }
    /* Style the tab */
    .tab {
        overflow: hidden;
        border: 1px solid #ccc;
        background-color: #f1f1f1;
    }

        /* Style the buttons inside the tab */
        .tab button {
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
            }

            /* Create an active/current tablink class */
            .tab button.active {
            }

    /* Style the tab content */
    .tabcontent {
        display: none;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-top: none;
    }

    #ibox-head {
        height: 200px;
        /*box-shadow: 0 12px 34px rgba(0, 0, 0, 0.12)*/
    }

    #ibox2 {
        height: 425px;
    }
    /* Style Progress abr */
    #bg-progressGen {
        background-color: #ffaaaa;
    }

    #bg-progressAge {
        background-color: #3be8b0;
    }

    #bg-progressPC {
        background-color: #81ceff;
    }

    #bg-progressMn {
        background-color: #ffc845;
    }

    #bg-progressDep {
        background-color: #98ce1e;
    }

    #bg-progressDep1 {
        background-color: #d2de61;
    }

    .font-size {
        font-size: 23px;
    }

    .slide {
        width: 1vw;
    }

    .purple-btn {
        text-align: center;
        color: #fff;
        background-color: #ae63e4;
        border: none;
        border-radius: 3px;
    }

        .purple-btn:hover {
            background-color: #a361d3
        }
</style>



