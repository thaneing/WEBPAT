@section Scripts {
    <script>
        $('#dtp1,#dtp2').datetimepicker({
            format: 'DD/MM/YYYY',
        });
    </script>

    <script>
        function Submit1() {
            var date1 = document.getElementById("StartDate1").value;
            var date2 = document.getElementById("StartDate2").value;

            var dataType = 'application/json; charset=utf-8';
            table = $('#example').DataTable({
                destroy: true,
                columnDefs:
                    [
                        {
                            targets: 4,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 5,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 6,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 7,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 8,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 9,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 10,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 11,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 12,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 13,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 14,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 15,
                            className: 'dt-body-right'
                        }

                    ],


                "language": {
                    "decimal": ",",
                    "thousands": "."
                },

                "pageLength": 25,

                dom: 'Bfrtip',


                buttons: [

                    {
                        extend: 'colvis',
                        text: '<i class="fa fa-eye"></i> ซ่อน/แสดง',
                        //messageTop: "รายงาน PV&AP : "+StartDate1 + "-" + StartDate2,
                        titleAttr: 'Hide',
                        postfixButtons: ['colvisRestore']
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i> PDF',
                        titleAttr: 'PDF',
                        pageSize: 'A4',   // ขนาดหน้ากระดาษเป็น A4
                        orientation: 'landscape',
                        //messageTop: "รายงาน PV&AP : "+StartDate1 + "-" + StartDate2,
                        customize: function (doc) {
                            doc.defaultStyle = {
                                font: 'THSarabun',
                                fontSize: '12',

                            };
                            var now = new Date();
                            var jsDate = now.getDate() + '-' + (now.getMonth() + 1) + '-' + now.getFullYear();
                            doc['footer'] = (function (page, pages) {
                                return {
                                    columns:
                                        [
                                            {
                                                alignment: 'center',
                                                text: ['Created on: ', { text: jsDate.toString() }]
                                            },
                                            {
                                                alignment: 'right',
                                                text: ['page ', { text: page.toString() }, ' of ', { text: pages.toString() }]
                                            }
                                        ],
                                    margin: 10
                                }
                            });
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fa fa-file-excel-o"></i> Excel',
                        titleAttr: 'Excel',
                        //messageTop: "รายงาน PV&AP : "+StartDate1 + "-" + StartDate2,
                        autoFilter: true
                    },
                    {
                        extend: 'copyHtml5',
                        text: '<i class="fa fa-files-o"></i> Copy',
                        titleAttr: 'Copy'

                    },
                    {
                        text: 'JSON',
                        action: function (e, dt, button, config) {
                            var data = dt.buttons.exportData();
                            $.fn.dataTable.fileSave(
                                new Blob([JSON.stringify(data)]),
                                'Export.json'
                            );
                        }
                    },
                    {
                        extend: 'selectAll'
                    },
                    {
                        extend: 'selectNone'
                    }
                ],
                "ajax": {
                    "url": "/HRRecruites/GetTableResuiteData/?StartDate=" + date1 + "&EndDate=" + date2,
                    "contentType": dataType,
                    "type": "GET",
                    "data": function (response) {
                        return JSON.stringify(response.data);
                    }

                },

                "columns": [


                    { "data": "RowNumber" },
                    { "data": "DepartmentName" },
                    { "data": "Department1Name" },
                    { "data": "PositionName" },
                    { "data": "RecuireNow" },
                    { "data": "Apptotal" },
                    { "data": "AppTel" },
                    { "data": "PerAppTel" },
                    { "data": "AppCome" },
                    { "data": "PerAppCome" },
                    { "data": "AppWait" },
                    { "data": "PerAppWait" },
                    { "data": "AppSucc" },
                    { "data": "PerAppSucc" },
                    { "data": "AppStart" },
                    { "data": "PerAppStart" }

                    //{ "data": "InitialEntryGlobalDim2" },
                    // { "data": "CountDocument" },




                ]

            });

            $.ajax({
                type: "GET",
                url: "/HRRecruites/Getapp/?date1=" + date1 + "&date2=" + date2,
                success: function (data) {
                    label1 = [];
                    data1 = [];
                    $.each(data, function (i, v) {
                        label1.push(v.x);
                        data1.push(v.y);
                    })




                    var progress = document.getElementById('animationProgress');
                    var ctx = document.getElementById("canvas").getContext("2d");

                    var myChart = new Chart(ctx, {});
                    myChart.destroy();

                    myChart = new Chart(ctx, {
                        type: "bar",
                        data: {
                            labels: label1,
                            datasets: [
                                {
                                    label: "สถานะการนัด",
                                    fillColor: "rgba(151,187,205,0.5)",
                                    strokeColor: "rgba(151,187,205,0.8)",
                                    highlightFill: "rgba(151,187,205,0.75)",
                                    highlightStroke: "rgba(151,187,205,1)",
                                    data: data1
                                }
                            ]
                        },
                        options: {

                            title: {
                                display: true,
                                text: 'รายงานผลการ Recruite'
                            },
                            legend: {
                                legendPosition: 'right',
                                display: true,
                                labels: {
                                    fontColor: 'rgb(255, 99, 132)'
                                }
                            },
                            scales: {
                                yAxes: [
                                    {
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }
                                ]
                            },
                            animation: {
                                duration: 2000,
                                onProgress: function (animation) {
                                    progress.value = animation.currentStep / animation.numSteps;
                                },
                                onComplete: function () {
                                    window.setTimeout(function () {
                                        progress.value = 0;
                                    }, 2000);
                                }
                            }


                        }
                    });

                },
                error: function (error) {
                    alert('failed');
                }
            })
        }
    </script>





}

