    }

    #bg-progressPC {
        background-color: #81ceff;
    }

    #bg-progressMn {
        background-color: #ffc845;
    }

    #bg-progressDep {
        background-color: #98ce1e;
    }

    #bg-progressDep1 {
        background-color: #d2de61;
    }

    .font-size {
        font-size: 23px;
    }

    .slide {
        width: 1vw;
    }

    .purple-btn {
        text-align: center;
        color: #fff;
        background-color: #ae63e4;
        border: none;
        border-radius: 3px;
    }

        .purple-btn:hover {
            background-color: #a361d3
        }
</style>



