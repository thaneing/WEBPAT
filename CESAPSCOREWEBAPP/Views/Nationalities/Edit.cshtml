@model CESAPSCOREWEBAPP.Models.Nationality

@{
    ViewData["Title"] = "แก้ไขข้อมูลสัญชาติ";
    ViewData["Tab"] = "<ol class='breadcrumb'>"
                 + "<li>"
                 + "<a href='../../Home/Index' data-toggle='tooltip' data-placement='top' title='Home'>หน้าหลัก</a>"
                 + "</li>"
                 + "<li>"
                 + "<a href='/Nationalities/Index' data-toggle='tooltip' data-placement='top' title='List'>รายการสัญชาติ</a>"
                 + "</li>"
                 + "<li class='active'>"
                 + "<b><a data-toggle='tooltip' data-placement='top' title='Add Title Of Users'>" + @ViewData["Title"] + "</a></b>"
                 + "</li>"
                 + "</ol>";

}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-sm-6 col-lg-6 col-md-6 col-lg-offset-3">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>@ViewData["Title"]</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="row">
                    <div class="col-md-12">

                        <input type="hidden" asp-for="NationalityId" />
                        <div class="form-group">
                            <label asp-for="NationalityName" class="control-label">สัญชาติ : </label>
                            <input asp-for="NationalityName" class="form-control" />
                            <span asp-validation-for="NationalityName" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div>

                </div>
            </div>
        </div>
        <input type="submit" value="บันทึก" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Save" />
        <a asp-action="Index" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Back to List">กลับรายการ</a>
    </div>

</form>