                                text: '<i class="fa fa-file-excel-o"></i> Excel',
                                titleAttr: 'Excel',
                                //messageTop: item + " " + itemname,
                                autoFilter: true
                            },
                            {
                                extend: 'copyHtml5',
                                text: '<i class="fa fa-files-o"></i> Copy',
                                titleAttr: 'Copy'

                            }

                        ]

                    });




                }
            });
        }
    </script>


}