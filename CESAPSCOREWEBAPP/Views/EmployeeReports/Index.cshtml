    <script>
        $("#ddlBranch").select2();
    </script>
    <script>
        $("#ddlStatus").select2();
    </script>
    <script>
        $("#ddlPosition").select2();
    </script>
    <script>
        $("#ddlDep1s").select2();
    </script>
    <script>
        $("#ddlDep").select2();
    </script>
