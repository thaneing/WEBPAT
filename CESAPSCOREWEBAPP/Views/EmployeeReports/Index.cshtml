    </script>
    <script>

        $.ajax({
            type: 'GET',
            contentType: "application/json",
            dataType: 'JSON',
            url: '/EmployeeReports/ShowEmployee/',
            success: function (response) {
                //alert("yeah");
                document.getElementById("tableReport").innerHTML = response.data;
