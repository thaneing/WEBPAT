@model IEnumerable<CESAPSCOREWEBAPP.Models.Organiz>

@{
    ViewData["Title"] = "ผังองค์กรและอัตรากำลัง";
         ViewData["Tab"] = "<ol class='breadcrumb'>"
                 + "<li>"
                 + "<a href='../../Home/Index' data-toggle='tooltip' data-placement='top' title='Home'>หน้าหลัก</a>"
                 + "</li>"
                 + "<li>"
                 + "<a href='/Menuseting/Index' data-toggle='tooltip' data-placement='top' title='ตั้ังค่า'>Setting</a>"
                 + "</li>"
                 + "<li class='active'>"
                 + "<b><a>" + @ViewData["Title"] + "</a></b>"
                 + "</li>"
                 + "</ol>";
}

<div class="col-sm-8 col-lg-8 col-md-8 col-lg-offset-2">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>รายการผังองค์กรและอัตรากำลัง</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>

                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        <button class="btn btn-primary" onclick="createdata()" data-toggle="tooltip" data-placement="top" title="เพิ่มข้อมูลผังองค์กรและอัตรากำลัง">Create</button>
                  
                    </p>
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="dt1">
                        <thead>
                            <tr>
                                <th>
                                    รหัส
                                </th>
                                <th>
                                    ฝาย
                                </th>
                                <th>
                                    แผนก
                                </th>

                                <th>
                                    ตำแหน่ง
                                </th>
                                <th>
                                    อัตรากำลัง
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.organizId)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Departments.DepartmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department1s.Department1Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Positions.PositionName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Power)
                                    </td>

                                    <td>
                                        <a  class="btn btn-info" data-toggle="tooltip" data-placement="top" title="แก้ไข" data-id-type="@item.organizId" data-position-type="@item.PositionId" data-dep-type="@item.DepartmentId" data-dep1s-type="@item.Department1Id" data-power-type="@item.Power" onclick="editdata(this);"><i class="fa fa-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.organizId" class="btn btn-info" data-toggle="tooltip" data-placement="top" title="รายละเอียด"><i class="fa fa-eye"></i></a>
                                        @*<a asp-action="Delete" asp-route-id="@item.organizId" class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="ลบ"><i class="fa fa-trash"></i></a>*@
                                        <a class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="ลบ" data-id-type="@item.organizId" data-animal-type="@item.Positions.PositionName" onclick="deleteItem(this);"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">เพิ่มผังอัตรากำลัง</h4>
            </div>
            <form asp-action="Create" asp-controller="Organizs" method="post">

                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">ฝ่าย</label>
                        <select name="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">แผนก</label>
                        <select name="Department1Id" class="form-control" asp-items="ViewBag.Department1Id"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">ตำแหน่ง</label>
                        <select name="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">อัตรากำลัง</label>
                        <input name="Power" class="form-control" type ="number"/>
                      
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="col-lg-2 pull-right">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="tooltip" data-placement="top" title="Close">ยกเลิก</button>
                    </div>
                    <input type="submit" value="บันทึก" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Save" />
                </div>
            </form>

        </div>
    </div>
</div>

<div id="myModalEdit" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">แก้ไขผังองค์กรและอัตรากำลัง</h4>
            </div>
            <form asp-action="Edit" asp-controller="Organizs" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="modal-body">
                    <input type="hidden" name="organizId" id="oid" />
                    <div class="form-group">
                        <label class="control-label">ฝ่าย</label>
                        <select name="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" id="dep"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">แผนก</label>
                        <select name="Department1Id" class="form-control" asp-items="ViewBag.Department1Id" id="dep1s"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">ตำแหน่ง</label>
                        <select name="PositionId" class="form-control" asp-items="ViewBag.PositionId" id="pos"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">อัตรากำลัง</label>
                        <input name="Power" class="form-control" type="number" id="powers"/>

                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="บันทึก" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Save" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="tooltip" data-placement="top" title="Close">ยกเลิก</button>
                </div>


            </form>

        </div>
    </div>
</div>

@section Scripts{
    <script>
        function createdata() {
            $('#myModal').modal();
        }
    </script>
    <script>
        function editdata(edit) {
            $('#myModalEdit').modal();

            var id = edit.getAttribute("data-id-type");
            var pos = edit.getAttribute("data-position-type");
            var dep = edit.getAttribute("data-dep-type");
            var dep1s = edit.getAttribute("data-dep1s-type");
            var power = edit.getAttribute("data-power-type");
            //alert(pos + dep+dep1s);
            //1. เรียกแสดงขึ้น Form
            document.getElementById('oid').value = id; //เรียกแสดงใน input
            document.getElementById('pos').value = pos;//เรียกแสดงใน input
            document.getElementById('dep').value = dep;
            document.getElementById('dep1s').value = dep1s;
            document.getElementById('powers').value = power;
            //2. save with contoller>>

        }
    </script>

    <script>
        function deleteItem(deletebutton) {
            var id = deletebutton.getAttribute("data-id-type");
            var name = deletebutton.getAttribute("data-animal-type");
            swal({
                title: "คุณต้องการลบอัตรากำลังของตำแหน่ง " + name + " หรือไม่?",
                text: " ",
                //html: true,
                icon: "warning",
                buttons: [
                    'No',
                    'yes'
                ],

                dangerMode: true,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: "POST",
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        data: { id: id },
                        url: "/Organizs/remove/" + id,
                        success: function (response) {
                            //console.log(response.name);
                            swal("ลบสำเร็จ", {
                                title: "ลบสำเร็จ " + response.name,
                                icon: "success",
                                button: false,

                            });
                            setTimeout(function () {
                                location.reload();
                            }, 1000)

                        },
                        error: function () {
                            swal({
                                title: "คุณไม่มีสิทธิ์ในการลบข้อมูลนี้!",
                                icon: "warning",
                                button: "ตกลง",
                            });

                        }
                    });

                }
                else {
                    swal("ยกเลิกการลบ " + name, " ", "error");
                }
            })


        }

    </script>
}