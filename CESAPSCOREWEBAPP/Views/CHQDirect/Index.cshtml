
@{
    ViewData["Title"] = "สรุปการทำจ่ายโดย CHEQUE DIRECT";
    ViewData["Tab"] = "<ol class='breadcrumb'>"
   + "<li>"
   + "<a href='../../Home/Index'>Home</a>"
   + "</li>"

   + "<li class='active'>"
   + "<a>" + @ViewData["Title"] + "</a>"
   + "</li>"
   + "</ol>";
}


