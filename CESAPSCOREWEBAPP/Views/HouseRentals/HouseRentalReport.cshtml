                                    </th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot align="right">
                                <tr>
                                    <th colspan="5"></th>
                                    <th style="text-align:right"></th>
                                    <th style="text-align:right"></th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script>
        SearchData();
        function SearchData() {
            var dataType = 'application/json; charset=utf-8';
            var job = document.getElementById('joblist').value;
            table = $('#example1').DataTable({
                destroy: true,
                jQueryUI: true,
                dom: 'l<"H"Rf>t<"F"ip>',
                columnDefs:
                    [
                        {
                            targets: 0,
                            className: 'dt-body-center'
                        },
                        {
                            targets: 6,
                            className: 'dt-body-right'
                        },
                        {
                            targets: 5,
                            className: 'dt-body-right'
                        }


                    ],
                "language": {
                    "decimal": ",",
                    "thousands": "."
                },

                //scrollY: 500,
                //deferRender: true,
                //scrollCollapse: true,
                //scroller: {
                //    loadingIndicator: true
                //},
                //responsive: true,
                //fixedHeader: true,
                //select: {
                //    style: 'os',
                //    blurable: true
                //},
                 "order": [[3, "asc"]],
                "pageLength": 20,
                dom: 'Bfrtip',
                responsive: true,

                //stateSave: true,
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fa fa-file-pdf-o"></i> PDF',
                        titleAttr: 'PDF',
                        pageSize: 'A4',   // ขนาดหน้ากระดาษเป็น A4
                        title: 'รายงานสรุปยอดการเช่าห้องพัก - C.E.S',
                        //orientation: 'landscape',
                        // messageTop: "รายงาน PV&AP : " + StartDate1 + "-" + StartDate2,
                        customize: function (doc) {
                            doc.defaultStyle = {
                                font: 'THSarabun',
                                fontSize: '12'


                            };
                            var now = new Date();
                            var jsDate = now.getDate() + '-' + (now.getMonth() + 1) + '-' + now.getFullYear();
                            doc['footer'] = (function (page, pages) {
                                return {
                                    columns:
                                        [
                                            {
                                                alignment: 'center',
                                                text: ['Created on: ', { text: jsDate.toString() }]
                                            },
                                            {
                                                alignment: 'right',
                                                text: ['page ', { text: page.toString() }, ' of ', { text: pages.toString() }]
                                            }
                                        ],
                                    margin: 10
                                }
                            });
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        //title: 'รายงานใบสั้งงานตาม Vendor No :' + item + ' Vendor Name :' + itemName,
                        exportOptions: {
                            columns: ':visible'
                        },
                        text: '<i class="fa fa-file-excel-o"></i> Excel',
                        titleAttr: 'Excel',
                        title: 'รายงานสรุปยอดการเช่าห้องพัก - C.E.S',
                        autoFilter: true
                    },
                    {
                        extend: 'selectAll'
                    },
                    {
                        extend: 'selectNone'
                    }
                ],
                "ajax": {
                    //"url": "/HouseRentals/GetData/?Month=" + month,
                    "url": "/HouseRentals/GetReportDiff/?Job=" + job,
                    "contentType": dataType,
                    "type": "GET",
                    "data": function (response) {
                        return JSON.stringify(response.data);
                    }

                },

                "columns": [
                    { "data": "EmpId" },
                    { "data": "EmpName" },
                    { "data": "Site" },
                    { "data": "RoomNumber" },
                    { "data": "HouseName" },
                    { "data": "Deposit", render: $.fn.dataTable.render.number(',', '.', 2, '') },
                    { "data": "Advanced", render: $.fn.dataTable.render.number(',', '.', 2, '') }


                ],

                "footerCallback": function (row, data, start, end, display) {
                    var api = this.api(), data;

                    // Remove the formatting to get integer data for summation
                    var intVal = function (i) {
                        return typeof i === 'string' ?
                            i.replace(/[\$,]/g, '') * 1 :
                            typeof i === 'number' ?
                                i : 0;
                    };

                    // Total over all pages
                    totalAdvance = api
                        .column(5)
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0);
                    TotalDeposit = api
                        .column(6)
                        .data()
                        .reduce(function (a, b) {
                            return intVal(a) + intVal(b);
                        }, 0);

                    // Total over this page

                    //TotalDeposit = api
                    //    .column(6, { page: 'current' })
                    //    .data()
                    //    .reduce(function (a, b) {
                    //        return intVal(a) + intVal(b);
                    //    }, 0);

                    var Advance = parseFloat(totalAdvance).toFixed(2);
                    var sumAdvance = Advance.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');

                    var Deposits = parseFloat(TotalDeposit).toFixed(2);
                    var sumDeposit = Deposits.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,');

                    // Update footer
                    $(api.column(0).footer()).html(
                        'รวมเป็นเงินทั้งหมด'
                    );
                    $(api.column(5).footer()).html(
                        sumAdvance//ล่วงหน้า
                    );
                    $(api.column(6).footer()).html(
                        sumDeposit//ประกัน มัดจำ
                    );
                }
            });

            $(document).contextmenu({
                delegate: ".dataTable tr",
                menu: [
                    { title: "Filter", cmd: "filter", uiIcon: "ui-icon-volume-off ui-icon-filter" },
                    { title: "Remove filter", cmd: "nofilter", uiIcon: "ui-icon-volume-off ui-icon-filter" }
                ],
                select: function (event, ui) {
                    //var data = table.data();

                    console.log(ui.target[0]._DT_CellIndex.row);
                    console.log(ui.target[0]._DT_CellIndex.column);

                    var row = ui.target[0]._DT_CellIndex.row;
                    var colum = ui.target[0]._DT_CellIndex.column
                    var data = table.row(row).data()
                    var celltext = ui.target.text();
                    switch (ui.cmd) {
                        case "filter":
                            table
                                .column(colum)
                                .search('^' + celltext + '$', true)
                                .draw();
                            break;
                        case "nofilter":
                            table
                                .search('')
                                .columns().search('')
                                .draw();
                            break;
                    }
                },
                beforeOpen: function (event, ui) {
                    var $menu = ui.menu,
                        $target = ui.target,
                        extraData = ui.extraData;

                }
            });
        }

        //var job = document.getElementById('joblist').value;







    </script>


    <script>
        $("#joblist").select2();
    </script>

}